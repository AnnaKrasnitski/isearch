			"default":50
		},
		"selectedValue":{
			"type": "string",
			"description": "Key result set"
			
		},
		"selectedText":{
			"type": "string",
			"description": "Text result set"			
		},
		"_isEnabled":{
			"type": "boolean",
			"description": "Whether to enable or disable"
		},
		"displayKey":{
			"type": "boolean",
			"description": "Whether show or hide key"
		},
		"selectedDimension":{
			"type": "string",
			"description": "Selected dimension for suggestion list"
		},
		"_isSearchButton":{
			"type": "boolean",
			"description": "Whether to show or hide the searchbutton"
		},
		"maxLength":{
			"type": "integer",
			"description": "The maximum search string"
		}
	},
	"methods": {
		"getValue": {
			"returnType": "string",
			"description": "Returns the selected value",
			"parameters": [],
			"body": "return this.selectedValue;"
		},
		"getText": {
			"returnType": "string",
			"description": "Returns the selected text",
			"parameters": [],
			"body": "return this.selectedText;"
		},
		"setEnabled": {
			"description": "Enables or disables component",
			"parameters": [
				{
					"name": "benableRes",
					"type": "boolean",
					"description": "enable or not"
				}
			],
			"body": "this._isEnabled = benableRes;"
		},
		"isEnabled": {
			"returnType": "boolean",
			"description": "Returns whether component is enabled",
			"parameters": [],
			"body": "return this._isEnabled;"
		},
		"setDisplayKey": {
			"description": "Displays or hide the key",
			"parameters": [
				{
					"name": "bKey",
					"type": "boolean",
					"description": "is key displayed"
				}
			],
			"body": "this.displayKey =bkey;"
		},
		"isDisplayKey": {
			"returnType": "boolean",
			"description": "Returns whether the key is displayed",
			"parameters": [],
			"body": "return this.displayKey;"
		},
		"getSelectedDimension": {
			"returnType": "string",
			"description": "Returns the selected dimension",
			"parameters": [],
			"body": "return this.placeHolder;"
		},
		"setSelectedDimension": {
			"description": "Sets the selected dimension",
			"parameters": [
				{
					"name": "sDim",
					"type": "string",
					"description": "selected Dimension"
				}
			],
			"body": "this.selectedDimension = sDim;"
		}


	},
	"events": {
		"onSearch": {
			"description": "On search event"
		}
	}
